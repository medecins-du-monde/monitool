    "koa-session": "^5.8.1",
    "memory-cache": "^0.1.6",
    "nano": "x",
    "node-uuid": "x",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.4.0",
    "password-hash": "x",
    "pdfmake": "^0.1.27",
    "roboto-fontface": "^0.7.0",
    "timeslot-dag": "^0.1.1",
    "winston": "^2.3.1"
  },
  "scripts": {
    "start": "./node_modules/.bin/nodemon lib/main.js --exitcrash --exec ./node_modules/.bin/babel-node",
