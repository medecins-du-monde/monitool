{
	"$schema": "http://json-schema.org/schema#",
	"title": "Monitool theme schema",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"_id",
		"type",
		"shortName",
		"name"
	],
	"properties": {
		"_id": {
			"type": "string",
			"pattern": "^theme:[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$"
		},
		"_rev": {
			"type": "string",
			"pattern": "^[0-9]+\\-[0-9a-f]{32}$"
		},
		"type": {
			"type": "string",
			"pattern": "^theme$"
		},
		"shortName": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"en": {
					"type": "string",
					"minLength": 1,
					"maxLength": 5
				},
				"fr": {
					"type": "string",
					"minLength": 1,
					"maxLength": 5
				},
				"es": {
					"type": "string",
					"minLength": 1,
					"maxLength": 5
				}
			}
		},
		"name": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"en": {
					"type": "string",
					"minLength": 1
				},
				"fr": {
					"type": "string",
					"minLength": 1
				},
				"es": {
					"type": "string",
					"minLength": 1
				}
			}
		},
		"comments": {
			"type": "array",
			"items": {
				"type": "object",
				"additionalProperties": false,
				"properties": {
					"value": { "type": "object"},
					"filter": { "type": "object"}
				}
			}
		}
	}
}